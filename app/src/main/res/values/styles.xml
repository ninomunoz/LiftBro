<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Spinner label -->
    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingStart">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingEnd">@dimen/input_label_horizontal_spacing</item>
    </style>

</resources>