<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/tv_exercise_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/ll_last_sets_reps_weight_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_last_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S: 0"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_last_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R: -/-/-"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_last_weight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W: -/-/-"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_target_sets_reps_weight_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_target_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_target_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_target_weight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>